{
  "name": "@bloombug/money",
  "version": "3.0.0",
  "author": "Ryan Macdonald <hi@ryanmacdonald.ca>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/money.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "bigdecimal.js": "^1.3.0",
    "lodash.memoize": "^4.1.2"
  },
  "devDependencies": {
    "@bloombug/jest-money": "^1.3.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@size-limit/webpack": "^7.0.5",
    "@size-limit/webpack-why": "^7.0.5",
    "@types/lodash.memoize": "^4.1.6",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/money.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/money.esm.js",
      "limit": "15 KB"
    }
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-utils/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/{!(jest),(test),}/{!(index),}.{ts,tsx,js,jsx}"
    ]
  }
}
